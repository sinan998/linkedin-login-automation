{
  "name": "@codeceptjs/ui",
  "version": "0.3.2",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint --fix && vue-cli-service lint lib/** --fix",
    "backend": "node ./bin/codecept-ui.js -c node_modules/@codeceptjs/examples",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "examples": "cd node_modules/@codeceptjs/examples && node ../../../bin/codecept-ui.js",
    "frontend": "vue-cli-service serve",
    "deploy": "npm run build && npm publish",
    "test": "ava",
    "test:watch": "ava -w"
  },
  "main": "background.js",
  "files": [
    "dist",
    "bin",
    "lib",
    "build"
  ],
  "dependencies": {
    "@codeceptjs/configure": "^0.5.1",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "chokidar": "^3.4.0",
    "commander": "^3.0.2",
    "debug": "^4.1.1",
    "electron-prebuilt": "^1.4.13",
    "express": "^4.17.1",
    "lodash.clonedeep": "^4.5.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "@codeceptjs/examples": "^1.2.1",
    "@medv/finder": "^1.1.3",
    "@vue/cli-plugin-babel": "^3.12.1",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-service": "^3.12.1",
    "@vue/eslint-config-prettier": "^6.0.0",
    "ansi-to-html": "^0.6.14",
    "ava": "^2.4.0",
    "babel-eslint": "^10.1.0",
    "buefy": "^0.8.17",
    "codeceptjs": "3.0.0-beta.2",
    "contributor-faces": "^1.0.3",
    "copy-text-to-clipboard": "^2.2.0",
    "electron": "^6.1.11",
    "electron-icon-builder": "^1.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "moment": "^2.25.3",
    "playwright": "^0.17.0",
    "prismjs": "^1.20.0",
    "puppeteer": "^3.0.3",
    "qrcode-terminal": "^0.12.0",
    "sass": "^1.26.5",
    "sass-loader": "^7.1.0",
    "tailwindcss": "^1.4.5",
    "testcafe": "^1.8.4",
    "uuid": "^3.4.0",
    "vue": "^2.6.11",
    "vue-cli-plugin-electron-builder": "~1.4.6",
    "vue-highlightjs": "^1.3.3",
    "vue-monaco": "^1.2.0",
    "vue-prism-editor": "^0.3.0",
    "vue-router": "^3.1.6",
    "vue-socket.io": "^3.0.8",
    "vue-template-compiler": "^2.6.11",
    "vuex": "^3.3.0",
    "webdriverio": "^5.22.4"
  },
  "peerDependencies": {
    "codeceptjs": "^3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "plugin:vue/strongly-recommended",
      "eslint:recommended"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "vue/script-indent": [
        "error",
        2,
        {
          "baseIndent": 0,
          "switchCase": 0
        }
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "sort-imports": [
        "error",
        {
          "ignoreCase": false,
          "ignoreDeclarationSort": true,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "multiple",
            "single"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.vue"
        ],
        "rules": {
          "indent": "off",
          "vue/script-indent": [
            "error",
            2
          ]
        }
      }
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "bin": {
    "codecept-ui": "./bin/codecept-ui.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lint",
      "git add"
    ]
  },
  "repository": "codecept-js/ui"
}
